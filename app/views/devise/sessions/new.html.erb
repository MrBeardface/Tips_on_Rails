<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

    <h3>Sign in</h3>

    <div class="well well-lg">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Your email address', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Your password' %>
        </div>

        <%= f.button 'Sign in', class: 'btn btn-success pull-right', data: { disable_with: 'Please wait...' } %>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              Remember me
            <% end %>
          </div>
        <% end -%>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
