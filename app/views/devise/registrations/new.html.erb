<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

    <h3>Sign up</h3>

    <div class="well well-lg">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'Your first name', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Your last name' %>
        </div>

        <div class="form-group">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Your email address' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Your desired password', autocomplete: 'off' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your desired password', autocomplete: 'off' %>
        </div>

        <%= f.button 'Sign up', class: 'btn btn-success pull-right', data: { disable_with: 'Please wait...' } %>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
