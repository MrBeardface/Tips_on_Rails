<% if current_user  %>
  <% unless @tip.user == current_user %>
    <div id="bookmark_form">
    <% if @bookmark %>

      <%= form_tag bookmark_path(@bookmark), method: :delete do %>
        <%= button_tag class: "btn btn-large btn-danger" do %>
          <i class="fa fa-bookmark"></i> Unbookmark
        <% end %>
      <% end %>
    
    <% else %>
    
      <%= form_tag bookmarks_path, method: :post do %> 
        <div><%= hidden_field_tag :tip_id, @tip.id %></div>
        <%= button_tag class: "btn btn-large btn-success" do %>
          <i class="fa fa-bookmark"></i> Bookmark
        <% end %>
      <% end %>
    
    <% end %>
    </div>
  <% end %>
<% end %>