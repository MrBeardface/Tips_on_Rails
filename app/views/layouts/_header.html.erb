<header>
  <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Tips on Rails", root_path, id: "logo", class: 'navbar-brand' %>
      </div>
      
      <div class="navbar-collapse collapse" id="bs-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li>
              <form action="<%= new_tip_path %>" method="get">
                <%= button_tag class: 'btn btn-default navbar-btn btn-sm' do %>
                  <i class="fa fa-plus"></i>
                  New Tip
                <% end %>
              </form>
            </li>
          <% end %>
          <li>
            <%= link_to root_path do %>
              <i class="fa fa-home"></i> Home
            <% end %>
          </li>
          <li>
            <%= link_to help_path do %>
              <i class="fa fa-question-circle"></i> Help
            <% end %>
          </li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-user"></i> <%= current_user.first_name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to current_user do %>
                    <i class="fa fa-fw fa-user"></i> Profile
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_registration_path do %>
                    <i class="fa fa-fw fa-cog"></i> Settings
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to destroy_user_session_path, method: "delete" do %>
                    <i class="fa fa-fw fa-sign-out"></i> Sign out
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-sign-in"></i> Sign in
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
