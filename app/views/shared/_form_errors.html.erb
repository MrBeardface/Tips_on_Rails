<% if object.errors.any? %>

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">Please fix the following errors</h3>
    </div>
    <div class="panel-body">
      <ul>
        <% object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>

<% end %>