<span class="user"><strong><%= link_to tip.user.name, user_path(tip.user) %></strong>
</span>
<span class="description"><%= link_to tip.title, tip_path(tip) %>
</span>
<span class="timestamp">Posted <%= time_ago_in_words(tip.created_at) %> ago.
</span>

  <% if can? :destroy, tip %>
  <%= link_to "Delete", tip, method: :destroy,
                                   data: { confirm: "If you delete this, it's not coming back. Maybe, you would rather edit this tip." },
                                  title: tip.description %>
  <% end %>
  <% if can? :update, tip %>
    <%= link_to "Edit", edit_tip_path(tip) %>
  <% end %> 
  