<div class="row">
  <div class="page-header">
    <h2>Edit your profile settings</h2>
  </div>
</div>

<%= form_for(@user, html: { role: 'form' }) do |f| %>

<div class="row">
  <div class="col-xs-12">
    <%= render 'shared/form_errors', object: f.object %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>  
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
</div>


<hr>

<div class="row">
  <div class="col-xs-12">
    <%= f.button 'Update', class: 'btn btn-success', data: { disable_with: 'Please wait...' } %>

  </div>
</div>

<% end %>
